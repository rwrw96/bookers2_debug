    
      <table>
        <tbody>
            <tr>
              <% book_comments.each do |comment| %>
              <td><%= attachment_image_tag(book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
                  <%= comment.user.name %></td>
              <td><%= comment.comment %></td>
              <% if book.user_id == current_user.id %>
              <td><%= link_to "destroy", book_book_comments_path(book.id) , method: :delete, class: "btn btn-danger" , remote: true %></td>
            </tr>
              <% end %>
            <% end %>
        </tbody>
       </table>